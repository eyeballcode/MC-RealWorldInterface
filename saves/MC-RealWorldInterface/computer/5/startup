rednet.open('right')

monitor = peripheral.find('monitor')

function resetPos()
  x, y = monitor.getSize()
  monitor.setCursorPos(x, y / 2)
  return x, y
end

function display(value)
  x, y = resetPos()
  data = 'Temperature = ' .. value
  length = string.len(data)
  x = x / 2 - length / 2
  monitor.setCursorPos(x, y / 2)
  monitor.clear()
  monitor.write(data)
end

while true do
  sender, message = rednet.receive('MC-RealWorldInterface-TempLogger')
  if string.sub(message, 0, 11) == 'TempLogger=' then
    value = string.sub(message, 12)
    display(value)
  end
end
